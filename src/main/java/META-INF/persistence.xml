<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.demo.model.CategorysEntity</class>
        <class>com.example.demo.model.DiscountsEntity</class>
        <class>com.example.demo.model.GamesEntity</class>
        <class>com.example.demo.model.OrdersEntity</class>
        <class>com.example.demo.model.PermissionsEntity</class>
        <class>com.example.demo.model.RequirementTypesEntity</class>
        <class>com.example.demo.model.RequirementsEntity</class>
        <class>com.example.demo.model.ReviewsEntity</class>
        <class>com.example.demo.model.UsersEntity</class>
        <class>com.example.demo.model.CategoriesEntity</class>
        <class>com.example.demo.model.RolesEntity</class>
        <class>com.example.demo.model.PhotosEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/game_shop?useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
